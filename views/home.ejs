<%- include("partials/header") -%>
<h1>Home</h1>
<p><%= homeSC %></p>
<% posts.forEach(function(element){%>
    <!--<h1><%= element.heading %></h1> -->
    <a href="/posts/<%=element._id%>"><h1><%= element.heading %></h1></a>
    <!--<p><%= element.content.substring(0,100) + " ..." %><a href="/posts/<%=element.heading%>" >Read more</a></p> -->

    <% if(element.content.length > 100){ %>
        <p><%= element.content.substring(0,100) + " ..." %><a href="/posts/<%=element._id%>" >Read more</a></p> 
    <% }else{ %>
        <p><%=element.content%></p>
    <%} %>



<%})%>
<%- include("partials/footer") -%>